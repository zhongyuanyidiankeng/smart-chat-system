# Environment Configuration for Smart Chat System

# API Configuration
# Set to 'true' to use API endpoints instead of local storage/database
NEXT_PUBLIC_USE_API=false

# API Base URL (for production deployment)
# Leave empty for same-origin requests in development
NEXT_PUBLIC_API_URL=

# Database Configuration (PostgreSQL)
# Replace with your actual database credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_system
DB_USER=postgres
DB_PASSWORD=your_password_here

# File Upload Configuration
# Directory for storing uploaded files (server-side)
UPLOAD_DIR=./uploads

# Security Configuration
# Set to 'production' for production deployment
NODE_ENV=development

# Example Production Configuration:
# NEXT_PUBLIC_USE_API=true
# NEXT_PUBLIC_API_URL=https://your-domain.com
# DB_HOST=your-db-host.com
# DB_PORT=5432
# DB_NAME=production_chat_system
# DB_USER=production_user
# DB_PASSWORD=secure_password_here
# UPLOAD_DIR=/var/uploads
# NODE_ENV=production